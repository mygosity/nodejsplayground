{
	"compilerOptions": {
		"outDir": "build/",
		"target": "esnext",
		"moduleResolution": "node", //enables checking of import logic (goto definition)
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"/*": ["*"],
			"build/*": ["src/*"]
		},
		"types": ["node"],
		"watch": true
	},
	"include": ["'build/**/*", "src/**/*"],
	"exclude": ["node_modules", "logging/**/*"]
}
